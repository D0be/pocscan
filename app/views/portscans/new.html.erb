<% provide(:title, "New Port Scan") %>

<h1>New Scan</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@portscan, url: portscans_path ) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>

            <%= f.label :target %>
            <%= f.text_field :target, class: 'form-control' %>

            <%= f.submit "Start scan", class: "btn btn-primary" %>

        <% end %>

        <p>New Scan? <%= link_to "Back", portscans_path %></p>
    </div>
</div>
